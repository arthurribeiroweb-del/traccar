#set($subject = "$device.name: oil change due soon")
#set($digest = "Oil change due soon on $device.name at $dateTool.format('yyyy-MM-dd HH:mm:ss', $event.eventTime, $locale, $timezone)")
<!DOCTYPE html>
<html>
<body>
Device: $device.name<br>
Oil change due soon<br>
#if($event.attributes.oilReason)Reason: $event.attributes.oilReason<br>#end
#if($event.attributes.oilDueKm)Expected at: $event.attributes.oilDueKm km<br>#end
#if($event.attributes.oilCurrentKm)Current: $event.attributes.oilCurrentKm km<br>#end
#if($event.attributes.oilKmRemaining)Remaining km: $event.attributes.oilKmRemaining<br>#end
#if($event.attributes.oilDueDate)Expected date: $event.attributes.oilDueDate<br>#end
#if($event.attributes.oilDaysRemaining)Remaining days: $event.attributes.oilDaysRemaining<br>#end
Time: $dateTool.format('yyyy-MM-dd HH:mm:ss', $event.eventTime, $locale, $timezone)<br>
Location: <a href="$webUrl/event/$event.id">#{if}($position.address)$position.address#{else}$position.latitude&deg;, $position.longitude&deg;#{end}</a><br>
<br>
<a href="$webUrl/settings/notifications?token=$token">Unsubscribe</a>
</body>
</html>
